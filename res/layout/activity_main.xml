<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAnimator"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/layoutMain"
        style="@style/AppTheme"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ListView
            android:id="@+id/appListView"
            style="@style/AppThemeLarge"
            android:layout_width="fill_parent"
            android:drawSelectorOnTop="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textFilterEnabled="false"
            android:divider="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/menu" />
        <TextView
            style="@style/AppThemeMenu"
            android:id="@+id/menu"
            android:layout_width="fill_parent"
            android:background="@null"
            android:text="..."
            android:layout_above="@+id/searchText"
            android:layout_alignParentLeft="true" />
        <EditText
            android:id="@+id/searchText"
            style="@style/AppThemeLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:longClickable="true"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
            <requestFocus />
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:gravity="left|top"
        android:orientation="vertical" >
        <TextView
            style="@style/AppThemeLarge"
            android:id="@+id/appListDesc"
            android:layout_alignParentTop="true"
            android:text="Selected activity List:" />
        <Spinner
            style="@style/AppTheme"
            android:id="@+id/appList"
            android:layout_alignTop="@+id/appListRadioGroup"
            android:layout_alignParentLeft="true"
            android:entries="@array/appList" />
        <TextView
            style="@style/AppThemeLarge"
            android:id="@+id/autostartDesc"
            android:layout_alignParentTop="true"
            android:text="Autostart single result:" />
        <Spinner
            style="@style/AppTheme"
            android:id="@+id/autostart"
            android:layout_alignTop="@+id/autostartDesc"
            android:layout_alignParentLeft="true"
            android:entries="@array/yesNo" />
        <TextView
            style="@style/AppThemeLarge"
            android:id="@+id/backgroundDesc"
            android:layout_alignParentTop="true"
            android:text="Background:" />
        <Spinner
            style="@style/AppTheme"
            android:id="@+id/background"
            android:layout_alignTop="@+id/backgroundDesc"
            android:layout_alignParentLeft="true"
            android:entries="@array/background" />
        <Button
            style="@style/AppThemeLarge"
            android:id="@+id/wikiButton"
            android:layout_alignTop="@+id/background"
            android:text="Wiki" />
    </LinearLayout>
</ViewAnimator>

